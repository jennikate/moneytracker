// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model ExpenseType {
  id          Int          @id @default(autoincrement())
  label       String       @unique
  payments    Payment[]
  recipients  Recipient[]
}

model PaymentSource {
  id                     Int               @id @default(autoincrement())
  balance                Float
  label                  String            @unique
  defaultpaymentType     PaymentType?      @relation(fields: [paymentTypeId], references: [id]) 
  paymentTypeId          Int? 
  payments               Payment[]
}

model PaymentType {
  id              Int           @id @default(autoincrement())
  label           String        @unique
  payments        Payment[]
  paymentSources  PaymentSource[]
}

model Recipient {
  id                  Int           @id @default(autoincrement())
  defaultExpenseType  ExpenseType   @relation(fields: [expenseTypeId], references: [id])
  expenseTypeId       Int  
  name                String        @unique
  payments            Payment[]
}

model Payment {
  id              Int             @id @default(autoincrement())
  expenseType     ExpenseType     @relation(fields: [expenseTypeId], references: [id])
  expenseTypeId   Int   
  paymentSource   PaymentSource   @relation(fields: [paymentSourceId], references: [id])
  paymentSourceId Int
  paymentType     PaymentType     @relation(fields: [paymentTypeId], references: [id]) 
  paymentTypeId   Int      
  recipient       Recipient       @relation(fields: [recipientId], references: [id]) 
  recipientId     Int      
  date            DateTime        @default(now())
  amount          Float     
}