// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ExpenseType {
  id        Int          @id @default(autoincrement())
  label     String       @unique
  payments  Payment[]
}

model PaymentSource {
  id        Int           @id @default(autoincrement())
  balance   Float
  label     String        @unique
  payments  Payment[]
}

model PaymentType {
  id        Int           @id @default(autoincrement())
  label     String        @unique
  payments  Payment[]
}

model Recipient {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  payments    Payment[]
}

model Payment {
  id              Int             @id @default(autoincrement())
  expenseType     ExpenseType     @relation(fields: [expenseTypeId], references: [id])
  expenseTypeId   Int   
  paymentSource   PaymentSource   @relation(fields: [expenseTypeId], references: [id])
  paymentSourceId Int
  paymentType     PaymentType     @relation(fields: [paymentTypeId], references: [id]) 
  paymentTypeId   Int      
  date            DateTime        @default(now())
  recipient       Recipient       @relation(fields: [recipientId], references: [id]) 
  recipientId     Int      
  amount          Float     
}